<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!--  mapper 로 sql문 셋팅 -->
  
  <mapper namespace="  ">
  
  	<select id="selctAll" resultType="DeptDto">
  	select * from dept
  	</select>
  	
  	<select id="selectOneByDeptno" resultType="DeptDto" parameterType="int">
  	select * from dept
  	where deptno = #{deptno}  <!--  mybatis는 ?가 아니라 #임 --> 	
  	</select>
  
   <insert id="insertOneBydeptno" parameterType="DeptDto">
  	insert into dept
  	values( #{deptno}, #{dname}, #{loc} )
   </insert>
  
   <update id="updateOneByDeptno" parameterType="DeptDto">
  	update dept
  	set dname = #{dname}, loc=#{loc}
  	where deptno = #{deptno}
   </update>
  
  
   <delete id="deleteOnebyDeptno" parameterType="int">
   delete from dept
   where deptno = #{deptno}   
   </delete>
  
</mapper>